<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:bottomLeftRadius="@dimen/base_middle_round_radius"/>
                    <solid android:color="@color/base_white"/>
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:bottomLeftRadius="@dimen/base_middle_round_radius"/>
                    <solid android:color="@color/base_listPress"/>
                </shape>
            </item>
        </layer-list>

    </item>

    <item>
        <shape>
            <corners android:bottomLeftRadius="@dimen/base_middle_round_radius"/>
            <solid android:color="@color/base_white"/>
        </shape>
    </item>

</selector>