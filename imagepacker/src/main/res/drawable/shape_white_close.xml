<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="0">
            <shape>
                <solid android:color="@color/base_white"/>
                <size
                    android:width="100dp"
                    android:height="5dp"/>
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-135"
            android:toDegrees="0">
            <shape>
                <solid android:color="@color/base_white"/>
                <size
                    android:width="100dp"
                    android:height="5dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>