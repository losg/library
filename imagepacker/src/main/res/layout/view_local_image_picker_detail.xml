<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/line_space"
        android:layout_marginLeft="@dimen/line_space"
        android:background="#000000"
        >

        <ImageView
            android:id="@+id/local_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/check_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/line_space"
            android:paddingTop="@dimen/line_space"
            android:paddingBottom="@dimen/common_margin"
            android:paddingLeft="@dimen/common_margin"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/check_select"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/sr_image_picker_select_circle"
                android:gravity="center"
                android:textColor="@color/base_white"
                android:textSize="@dimen/text_size_hint"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>