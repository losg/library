<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/base_white"
    android:minHeight="@dimen/middle_button_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin">

    <TextView
        android:id="@+id/prview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/middle_button_height"
        android:paddingLeft="@dimen/row_spacing"
        android:paddingRight="@dimen/row_spacing"
        android:text="预览"
        android:layout_centerVertical="true"
        android:textColor="@color/cr_image_picker_btn_text"
        android:textSize="@dimen/text_size_hint"/>


    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/sr_imge_picker_btn"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/line_space"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/line_space"
        android:text="确定"
        android:textColor="@color/cr_image_picker_btn"
        android:textSize="@dimen/text_size_hint"
        />

</RelativeLayout>