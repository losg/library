<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:id="@+id/top_full"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#88000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:id="@+id/left_full"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#88000000" />

        <RelativeLayout
            android:id="@+id/scanner_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_scanner">

            <ImageView
                android:id="@+id/line_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_scanner_line" />

            <ImageView
                android:id="@+id/left_top_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_scanner_left_top" />

            <ImageView
                android:id="@+id/right_top_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_scanner_right_top" />

            <ImageView
                android:id="@+id/left_bottom_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/ic_scanner_left_bottom" />

            <ImageView
                android:id="@+id/right_bottom_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_scanner_right_bottom" />
        </RelativeLayout>

        <View
            android:id="@+id/right_full"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#88000000" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_full"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#88000000" />

</LinearLayout>